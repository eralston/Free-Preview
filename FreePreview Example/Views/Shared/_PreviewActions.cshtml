@{
    bool isPreviewActive = FreePreview.FreePreviewHelper.IsInPreviewSession(this.ViewContext.Controller);
}

<div class="row">
    <div class="col-md-12">
        @if (isPreviewActive)
        {
            <span style="color:green">Preview session ACTIVE</span>
        }
        else
        {
            <span style="color:red">No Preview Session</span>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        @Html.ActionLink("Start Preview", "StartPreview", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2">
        @Html.ActionLink("End Preview", "EndPreview", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2">
        @Html.ActionLink("Authorized Or Preview", "AuthorizedOrPreview", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2">
        @Html.ActionLink("Authorized Only", "AuthorizedOnly", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2">
        @Html.ActionLink("Redirect, Allow Anonymous", "RedirectPreviewAllowAnonymous", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-2">
        @Html.ActionLink("Redirect, Deny Anonymous", "RedirectPreviewDenyAnonymous", null, new { @class = "btn btn-default" })
    </div>
</div>

